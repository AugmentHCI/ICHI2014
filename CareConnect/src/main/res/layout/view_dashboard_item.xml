<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/grey_background_pattern"
    tools:context="robindecroon.careconnect.ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/dashboard_item_title"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#99000000"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dashboard_item_content"
        android:padding="10dp"
        android:lineSpacingExtra="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/content_back"
        android:layout_height="fill_parent" />

</LinearLayout>