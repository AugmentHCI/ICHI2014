<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingTop="20dp"
    android:background="@drawable/grey_background_pattern">

    <LinearLayout
        android:id="@+id/test_view"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/thickbar_left_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/thickbar_left_background">

            <TextView
                android:id="@+id/track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textIsSelectable="false"
                style="@style/TextHeader" />

            <TextView
                android:id="@+id/track_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#99ffffff"
                style="@style/TextHeaderSub"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:textIsSelectable="false"
                android:maxLines="2" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/track_dropdown_arrow"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/track_dropdown_arrow_light" />

    <ImageView
        android:id="@+id/track_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="-24dp"
        android:layout_marginTop="-24dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher"
        android:alpha="0.3"
        android:scaleType="fitXY" />
</FrameLayout>
